<?xml version="1.0" encoding="UTF-8"?>
<project name="SPLibraries" default="do-deploy" basedir="."  xmlns:fx="javafx:com.sun.javafx.tools.ant">
	<property name="test.build.dir" value="build/classes" />
	<property name="test.src.dir" value="build/src" />
	
	
	<target name="init-fx-tasks">
		<path id="fxant">
			<filelist>
				<file name="${java.home}\..\lib\ant-javafx.jar"/>
				<file name="${java.home}\lib\jfxrt.jar"/>
			</filelist>
		</path>

		<taskdef resource="com/sun/javafx/tools/ant/antlib.xml"
			uri="javafx:com.sun.javafx.tools.ant"
			classpathref="fxant"/>
	</target>
	<target name="setup-staging-area">
		<delete dir="externalLibs" />
		<delete dir="project" />
		<delete dir="projectRefs" />

		<mkdir dir="externalLibs" />

		<copy todir="externalLibs">
			<fileset dir="/Users/brent/Downloads/Eclipse.app/Contents/Eclipse/plugins/org.junit_4.12.0.v201504281640">
				<filename name="junit.jar"/>
			</fileset>
		</copy>
		<copy todir="externalLibs">
			<fileset dir="/Users/brent/SpiderOak Hive/OpenSourceJavaFX/SPLibraries/lib">
				<filename name="imgscalr-lib-4.2.jar"/>
			</fileset>
		</copy>
		<copy todir="externalLibs">
			<fileset dir="/Users/brent/SpiderOak Hive/OpenSourceJavaFX/SPLibraries/lib">
				<filename name="JGoogleAnalyticsTracker-1.2.0.jar"/>
			</fileset>
		</copy>
		<copy todir="externalLibs">
			<fileset dir="/Users/brent/SpiderOak Hive/OpenSourceJavaFX/SPLibraries/lib">
				<filename name="gson-2.5.jar"/>
			</fileset>
		</copy>
		<copy todir="externalLibs">
			<fileset dir="/Users/brent/SpiderOak Hive/OpenSourceJavaFX/SPLibraries/lib">
				<filename name="zip4j_1.3.2.jar"/>
			</fileset>
		</copy>
		<copy todir="externalLibs">
			<fileset dir="/Users/brent/SpiderOak Hive/OpenSourceJavaFX/SPLibraries/lib">
				<filename name="commons-math3-3.5.jar"/>
			</fileset>
		</copy>
		<copy todir="externalLibs">
			<fileset dir="/Users/brent/SpiderOak Hive/OpenSourceJavaFX/SPLibraries/lib">
				<filename name="JGoogleAnalyticsTracker-1.2.0-sources.jar"/>
			</fileset>
		</copy>
		<copy todir="externalLibs">
			<fileset dir="/Users/brent/SpiderOak Hive/OpenSourceJavaFX/SPLibraries/lib">
				<filename name="JGoogleAnalyticsTracker-1.2.0-javadoc.jar"/>
			</fileset>
		</copy>
		<copy todir="externalLibs">
			<fileset dir="/Users/brent/SpiderOak Hive/OpenSourceJavaFX/SPLibraries/lib">
				<filename name="commons-math3-3.5-javadoc.jar"/>
			</fileset>
		</copy>
		<copy todir="externalLibs">
			<fileset dir="/Users/brent/Downloads/Eclipse.app/Contents/Eclipse/plugins">
				<filename name="org.hamcrest.core_1.3.0.v201303031735.jar"/>
			</fileset>
		</copy>
		<copy todir="externalLibs">
			<fileset dir="/Users/brent/SpiderOak Hive/OpenSourceJavaFX/SPLibraries/lib">
				<filename name="slf4j-api-1.6.1.jar"/>
			</fileset>
		</copy>

		<mkdir dir="project" />
		<copy todir="project">
			<fileset dir="/Users/brent/SpiderOak Hive/OpenSourceJavaFX/SPLibraries">
				<include name="src/**" />
			</fileset>
		</copy>

		<mkdir dir="projectRefs" />
	</target>
	<target name='do-compile'>
		<delete dir="build" />
		<mkdir dir="build/src" />
		<mkdir dir="build/libs" />
		<mkdir dir="build/classes" />

		<!-- Copy project-libs references -->
		<copy todir="build/libs">
			<fileset dir="externalLibs">
				<include name="JGoogleAnalyticsTracker-1.2.0-sources.jar"/>
				<include name="commons-math3-3.5.jar"/>
				<include name="gson-2.5.jar"/>
				<include name="org.hamcrest.core_1.3.0.v201303031735.jar"/>
				<include name="JGoogleAnalyticsTracker-1.2.0.jar"/>
				<include name="commons-math3-3.5-javadoc.jar"/>
				<include name="junit.jar"/>
				<include name="JGoogleAnalyticsTracker-1.2.0-javadoc.jar"/>
				<include name="zip4j_1.3.2.jar"/>
				<include name="slf4j-api-1.6.1.jar"/>
				<include name="imgscalr-lib-4.2.jar"/>
			</fileset>
		</copy>

		<!-- Copy project references -->

		<!-- Copy project sources itself -->
		<copy todir="build/src">
			<fileset dir="project/src">
				<include name="**/*"/>
			</fileset>
		</copy>

		<javac includeantruntime="false" source="1.8" target="1.8" srcdir="build/src" destdir="build/classes" encoding="UTF-8">
			<classpath>
				<fileset dir="build/libs">
					<include name="*"/>
				</fileset>
			</classpath>
		</javac>

		<!-- Copy over none Java-Files -->
		<copy todir="build/classes">
			<fileset dir="project/src">
				<exclude name="**/*.java"/>
			</fileset>
		</copy>


	</target>

	<path id="classpath.test">
		<pathelement location="../lib/junit.jar" />
		<pathelement location="../lib/org.hamcrest.core_1.3.0.v201303031735.jar" />
		<pathelement location="../lib/zip4j_1.3.2.jar" />
		<pathelement location="../lib/commons-math3-3.5.jar" />
		<pathelement location="../lib/gson-2.5.jar" />
		<pathelement location="${test.build.dir}" />
	</path>

	<target name="test" depends="init-fx-tasks, setup-staging-area, do-compile">
		<junit printsummary="on" haltonfailure="yes" fork="true">
			<classpath>
				<path refid="classpath.test" />
				<pathelement location="${test.build.dir}" />
			</classpath>
			<formatter type="brief" usefile="false" />
			<batchtest>
				<fileset dir="${test.src.dir}" includes="**/*Test?.java" />
			</batchtest>
		</junit>
	</target>

	<target name="do-deploy" depends="setup-staging-area, do-compile, init-fx-tasks">
		<delete file="dist"/>
		<delete file="deploy" />

		<mkdir dir="dist" />
		<mkdir dir="dist/libs" />

		<copy todir="dist/libs">
			<fileset dir="externalLibs">
				<include name="*" />
			</fileset>
		</copy>


		<fx:resources id="appRes">
			<fx:fileset dir="dist" includes="SPLibraries.jar"/>
			<fx:fileset dir="dist" includes="libs/*"/>
		</fx:resources>

		<fx:application id="fxApplication"
			name="SPLibraries"
			mainClass="src/net/relinc/libraries/unitTests/BarSetupTest.java"
			toolkit="fx"
		/>

		<mkdir dir="build/classes/META-INF" />



		<fx:jar destfile="dist/SPLibraries.jar">
			<fx:application refid="fxApplication"/>
			<fileset dir="build/classes">
			</fileset>
			<fx:resources refid="appRes"/>

			<manifest>
				<attribute name="Implementation-Vendor" value="REL Inc."/>
				<attribute name="Implementation-Title" value="SPLibraries"/>
				<attribute name="Implementation-Version" value="0"/>
				<attribute name="JavaFX-Feature-Proxy" value="None"/>
			</manifest>
		</fx:jar>


		<mkdir dir="deploy" />
		<!-- Need to use ${basedir} because somehow the ant task is calculating the directory differently -->
		<fx:deploy
			embedJNLP="false"
			extension="false"
			includeDT="false"
			offlineAllowed="true"
			outdir="${basedir}/deploy"
			outfile="SPLibraries" nativeBundles="all"
			updatemode="background" >

			<fx:platform basedir="${java.home}"/>
			<fx:info title="SPLibraries" vendor="REL Inc."/>

			<fx:application refId="fxApplication"/>
			<fx:resources refid="appRes"/>
		</fx:deploy>


	</target>
</project>
